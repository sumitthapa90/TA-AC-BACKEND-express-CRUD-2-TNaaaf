<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css" />
  </head>
  <body>
    <h3>Sindle Articles</h3>
    <div>
      <h4><%= article.title %></h4>
      <h4><%= article.description %></h4>
      <h4><%= article.tags %></h4>
      <h4><%= article.author %></h4>
      <h4>Likes: <%= article.likes ? article.likes: 0 %></h4>
    </div>

    <div>
      <a href="/articles/<%= article.id %>/likes"><button>like</button></a>
    </div>
    <div>
      <a href="/articles/<%= article.id %>/edit"><button>edit</button></a>
    </div>
    <div>
      <a href="/articles/<%= article.id %>/delete"><button>Delete</button></a>
    </div>
    <div>
      <a href="/"><button>Home</button></a>
    </div>

    <section class="comments">
      <span>Comments</span>

      <form action="/articles/<%= article.id %>/comments" method="POST">
        <textarea name="text" placeholder="Comments"></textarea>
        <input type="text" name="author" placeholder="author" />
        <input type="submit" value="Add Comments" />
      </form>
    </section>

    <h3>Comments</h3>

    <div>
      <% article.comments.forEach(comment =>{%>
      <p><%= comment.text %></p>
      <p><%= comment.author %></p>

      <a href="/comments/<%= comment.id %>/edit"><button>Edit</button></a>
      <a href="/comments/<%= comment.id %>/delete"><button>Delete</button></a>
      <% })%>
    </div>
  </body>
</html>
